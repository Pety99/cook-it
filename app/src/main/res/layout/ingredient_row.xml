<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10"
    android:id="@+id/salary_row">

    <TextView
        android:id="@+id/row_ingredient_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center_vertical"
        android:textSize="16sp"
        tools:text="INGREDIENT_SAMPLE" />

    <ImageButton
        android:id="@+id/ingredient_remove_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:onClick="removeIngredient"
        android:scaleType="fitXY"
        android:tint="@color/colorDark"
        android:src="@drawable/ic_delete_grey600_48dp" />
</LinearLayout>